<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FILE60 // SYSTEM_TERMINAL</title>
    <link rel="icon" type="image/png" href="favicon.png">
    <script src="config.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Courier+Prime:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/javascript/javascript.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/css/css.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/xml/xml.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/htmlmixed/htmlmixed.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { mono: ['"Courier Prime"', 'monospace'] },
                    colors: { bg: '#d1d1d1', core: '#ffffff', ink: '#000000', accent: '#00ff41', alert: '#ff2a00', terminal: '#121212' },
                    boxShadow: { 'brutal': '8px 8px 0px 0px #000', 'brutal-sm': '4px 4px 0px 0px #000', 'brutal-lg': '12px 12px 0px 0px #000' }
                }
            }
        }
    </script>
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            overflow: hidden;
            font-family: 'Courier Prime', monospace;
            background-color: #d1d1d1;
        }

        .bg-grid {
            background-size: 40px 40px;
            background-image: radial-gradient(circle, #bcbcbc 1px, rgba(0, 0, 0, 0) 1px);
        }

        .scanlines::after {
            content: "";
            position: absolute;
            inset: 0;
            background: repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.07) 0px, rgba(0, 0, 0, 0.07) 1px, transparent 1px, transparent 2px);
            pointer-events: none;
            z-index: 5;
        }

        .custom-scroll::-webkit-scrollbar {
            width: 16px;
            border-left: 4px solid #000;
        }

        .custom-scroll::-webkit-scrollbar-track {
            background: #d1d1d1;
        }

        .custom-scroll::-webkit-scrollbar-thumb {
            background: #000;
            border: 2px solid #d1d1d1;
        }

        .active-press:active {
            transform: translate(3px, 3px);
            box-shadow: 0px 0px 0px 0px #000;
        }

        #notification-box {
            transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), opacity 0.2s ease;
            transform: translateY(-150%);
            opacity: 0;
            visibility: hidden;
        }

        #notification-box.visible {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        #drop-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.8);
            z-index: 9999;
            display: none;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(4px);
        }

        #drop-overlay.active {
            display: flex;
        }

        .drop-zone-full {
            width: 80%;
            height: 60%;
            border: 8px solid #00ff41;
            background: #000;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 12px 12px 0px 0px #00ff41;
            position: relative;
        }

        .progress-container {
            position: relative;
            width: 100%;
            height: 8px;
            background: #000;
            border: 2px solid #000;
            margin-top: 12px;
        }

        .progress-bar {
            height: 100%;
            background: #00ff41;
            width: 0%;
            transition: width 0.3s ease;
        }

        .upload-info {
            margin-top: 8px;
            font-size: 10px;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
        }

        /* CodeMirror Overrides */
        .CodeMirror {
            height: 100% !important;
            flex-grow: 1;
            background: #121212 !important;
            color: #00ff41 !important;
            font-family: 'Courier Prime', monospace !important;
            font-size: 14px;
            line-height: 1.5;
        }

        .CodeMirror-gutters {
            background: #1a1a1a !important;
            border-right: 1px solid #333 !important;
        }

        .CodeMirror-linenumber {
            color: #444 !important;
        }

        .CodeMirror-cursor {
            border-left: 2px solid #00ff41 !important;
        }

        .CodeMirror-selected {
            background: rgba(0, 255, 65, 0.2) !important;
        }

        .bg-diagonal-green {
            background-color: #ffffff;
            background-image: repeating-linear-gradient(45deg,
                    rgba(0, 255, 65, 0.15) 0px,
                    rgba(0, 255, 65, 0.15) 1px,
                    transparent 1px,
                    transparent 6px);
        }

        /* Resizer Styles */
        #resizer {
            width: 12px;
            cursor: col-resize;
            background-color: #000;
            z-index: 50;
            flex-shrink: 0;
            position: relative;
        }

        #resizer:hover,
        #resizer.resizing {
            background-color: #00ff41;
        }

        #resizer::after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 4px;
            height: 24px;
            background: repeating-linear-gradient(to bottom, #00ff41 0, #00ff41 2px, transparent 2px, transparent 4px);
        }

        #resizer:hover::after,
        #resizer.resizing::after {
            background: repeating-linear-gradient(to bottom, #000 0, #000 2px, transparent 2px, transparent 4px);
        }

        @media (max-width: 768px) {
            #resizer {
                display: none;
            }
        }
    </style>
</head>

<body class="flex flex-col h-screen bg-grid">

    <div id="notification-box"
        class="fixed top-14 left-1/2 -translate-x-1/2 z-[100] w-[90%] max-w-md pointer-events-none">
        <div id="notification-content"
            class="bg-alert border-[4px] border-black p-4 shadow-brutal flex items-start gap-4">
            <div class="bg-black text-white px-2 py-1 text-xs font-black uppercase">SYSTEM_MSG</div>
            <div id="notification-text" class="text-sm font-bold uppercase leading-tight pt-1"></div>
        </div>
    </div>

    <main class="flex flex-col md:flex-row flex-grow overflow-hidden">
        <aside
            class="w-full md:w-[480px] border-b-[4px] md:border-b-0 border-black bg-[#e5e5e5] p-6 flex flex-col shrink-0">
            <h1 class="font-black text-[4rem] leading-[0.7] tracking-tighter mb-4 -skew-x-6">FILE<br>60.</h1>

            <div class="flex border-[4px] border-black mb-6 shadow-brutal bg-black shrink-0">
                <button onclick="setMode('upload')" id="btn-mode-upload"
                    class="flex-1 py-3 font-black text-xs uppercase bg-accent text-black border-r-[4px] border-black transition-all">DUMP
                    TRASH</button>
                <button onclick="setMode('code')" id="btn-mode-code"
                    class="flex-1 py-3 font-black text-xs uppercase bg-black text-white transition-all">SPAGHETTI
                    CODE</button>
            </div>

            <div id="module-upload" class="flex flex-col flex-grow min-h-0 overflow-y-auto custom-scroll">
                <div id="upload-zone" onclick="triggerFileInput()"
                    class="flex-grow min-h-[200px] border-[4px] border-black bg-diagonal-green hover:bg-accent transition-all cursor-crosshair flex flex-col justify-center items-center p-8 relative group shadow-brutal">
                    <div id="upload-default" class="text-center">
                        <div
                            class="font-black text-2xl uppercase border-[4px] border-black bg-white px-6 py-3 shadow-brutal group-hover:shadow-none transition-all">
                            FEED ME FILES</div>
                        <p class="mt-6 text-[10px] font-bold tracking-widest leading-relaxed">TOP SECRET / SPICY MEMES /
                            EVIDENCE</p>
                        <p class="mt-2 text-[8px] opacity-60 font-bold uppercase">DROP IT LIKE IT'S HOT (OR NOT, I'M
                            JUST A DIV)</p>
                    </div>
                    <input type="file" id="file-input" class="hidden" onchange="handleFileSelect(event)">
                </div>
            </div>

            <div id="module-code" class="hidden flex-col flex-grow min-h-0">
                <div
                    class="flex-grow border-[4px] border-black bg-terminal shadow-brutal flex flex-col overflow-hidden h-full">
                    <div class="bg-black border-b-[2px] border-white/10 p-2 flex justify-between items-center shrink-0">
                        <div class="flex gap-1.5 px-2">
                            <div class="w-2.5 h-2.5 rounded-full bg-alert"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-yellow-400"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-accent"></div>
                        </div>
                        <select id="code-ext"
                            class="bg-terminal text-accent text-[9px] border-[1px] border-accent/50 px-2 py-0.5 uppercase font-bold outline-none">
                            <option value="html">index.html</option>
                            <option value="js">script.js</option>
                            <option value="css">style.css</option>
                            <option value="txt">raw.txt</option>
                        </select>
                    </div>
                    <div class="flex flex-grow relative overflow-hidden bg-terminal min-h-0">
                        <div id="code-editor-container" class="w-full h-full text-sm font-mono overflow-hidden"></div>
                    </div>
                    <button id="execute-btn" onclick="uploadCode()"
                        class="active-press border-t-[4px] border-black bg-accent py-4 font-black text-xs uppercase hover:bg-white transition-colors shrink-0">
                        SHIP IT TO PROD
                    </button>
                </div>
            </div>
        </aside>

        <div id="resizer"></div>

        <section class="flex-grow flex flex-col overflow-hidden">
            <div id="file-list-container" class="flex-grow overflow-y-auto p-8 custom-scroll">
                <div id="empty-state" class="hidden h-full flex items-center justify-center">
                    <div class="text-center">
                        <div class="text-[5rem] font-black opacity-5 -rotate-6 select-none uppercase mb-4">404: FILES
                            NOT FOUND</div>
                        <div class="text-lg font-bold opacity-30 uppercase">IT'S LONELY OUT HERE IN THE VOID.</div>
                    </div>
                </div>
                <div id="file-grid" class="grid gap-10"
                    style="grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));"></div>
            </div>
            <div
                class="p-3 m-4 border-[2px] border-black/20 text-[10px] font-bold opacity-60 uppercase italic text-center shrink-0">
                Your data is safe with us. (Note: We lost the decryption key anyway).
            </div>
        </section>
    </main>

    <div id="drop-overlay">
        <div class="drop-zone-full">
            <div class="text-center text-white">
                <div class="font-black text-6xl mb-4 uppercase tracking-wider text-accent">INCOMING!</div>
                <div class="font-bold text-xl uppercase tracking-wide mb-2">PREPARE FOR IMPACT</div>
                <div class="bg-accent text-black px-4 py-2 border-4 border-white font-black text-sm uppercase">
                    INITIATING TRANSFER PROTOCOL</div>
            </div>
        </div>
    </div>

    <script>
        const CONFIG_API_URL = (window.APP_CONFIG && window.APP_CONFIG.API_URL) || "";
        // Remove trailing slash if present
        const WORKER_BASE_URL = CONFIG_API_URL.replace(/\/$/, "");
        const STORAGE_KEY = 'file60_v3';

        let files = [];
        let isUploading = false;
        let sessionToken = null;
        let notificationTimeout;
        let serverConfig = null;

        async function init() {
            try {
                const res = await fetch(`${WORKER_BASE_URL}/api/init-session`);
                if (!res.ok) throw new Error();
                const data = await res.json();
                sessionToken = data.token;
                serverConfig = data.config || { maxFileSize: 100 * 1024 * 1024, maxFileSizeMB: 100 };
                updateFileSizeDisplay();
            } catch (err) {
                showStatus("INIT FAILED: " + (err.message || "Unknown error"), "error");
            }

            const saved = localStorage.getItem(STORAGE_KEY);
            if (saved) {
                files = JSON.parse(saved).filter(f => f.expires === "never" || Date.now() < f.expires);
                saveFiles();
            }
            render();
            setInterval(updateTimers, 1000);
            initCodeMirror();
            initResizer();
        }

        function initResizer() {
            const resizer = document.getElementById('resizer');
            const sidebar = document.querySelector('aside');
            if (!resizer || !sidebar) return;

            let isResizing = false;
            let startX, startWidth;

            resizer.addEventListener('mousedown', (e) => {
                isResizing = true;
                startX = e.clientX;
                startWidth = sidebar.getBoundingClientRect().width;
                resizer.classList.add('resizing');
                document.body.style.cursor = 'col-resize';
                document.body.style.userSelect = 'none';
            });

            document.addEventListener('mousemove', (e) => {
                if (!isResizing) return;
                const newWidth = startWidth + (e.clientX - startX);
                const minWidth = 300;
                const maxWidth = window.innerWidth * 0.7;

                if (newWidth >= minWidth && newWidth <= maxWidth) {
                    sidebar.style.width = `${newWidth}px`;
                    if (window.editor) window.editor.refresh();
                }
            });

            document.addEventListener('mouseup', () => {
                if (isResizing) {
                    isResizing = false;
                    resizer.classList.remove('resizing');
                    document.body.style.cursor = '';
                    document.body.style.userSelect = '';
                }
            });
        }

        function initCodeMirror() {
            const container = document.getElementById('code-editor-container');
            if (container) {
                window.editor = CodeMirror(container, {
                    value: "// PASTE YOUR CODE HERE...\n// BUGS GO ELSEWHERE.",
                    mode: "javascript",
                    lineNumbers: true,
                    lineWrapping: true,
                    autofocus: false
                });
                window.editor.setSize("100%", "100%");
            }
        }

        function showStatus(msg, type = "error") {
            const box = document.getElementById('notification-box');
            const content = document.getElementById('notification-content');
            const text = document.getElementById('notification-text');
            clearTimeout(notificationTimeout);
            content.className = type === "error" ? "bg-alert border-[4px] border-black p-4 shadow-brutal flex items-start gap-4" : "bg-accent border-[4px] border-black p-4 shadow-brutal flex items-start gap-4";
            text.innerText = msg;
            box.classList.add('visible');
            notificationTimeout = setTimeout(() => box.classList.remove('visible'), type === "success" ? 3000 : 4000);
        }

        function updateFileSizeDisplay() {
            if (serverConfig) {
                const uploadDefault = document.getElementById('upload-default');
                if (uploadDefault) {
                    const infoP = uploadDefault.querySelector('.opacity-40');
                    if (!infoP) {
                        uploadDefault.insertAdjacentHTML('beforeend', `<p class="mt-1 text-[8px] opacity-40 font-bold uppercase">Max size: ${serverConfig.maxFileSizeMB}MB</p>`);
                    }
                }
            }
        }

        // Drag and drop
        let dragCounter = 0;
        document.addEventListener('dragenter', (e) => { e.preventDefault(); dragCounter++; if (dragCounter === 1) document.getElementById('drop-overlay').classList.add('active'); });
        document.addEventListener('dragleave', (e) => { e.preventDefault(); dragCounter--; if (dragCounter === 0) document.getElementById('drop-overlay').classList.remove('active'); });
        document.addEventListener('dragover', (e) => e.preventDefault());
        document.addEventListener('drop', (e) => { e.preventDefault(); dragCounter = 0; document.getElementById('drop-overlay').classList.remove('active'); if (e.dataTransfer.files.length > 0) uploadFile(e.dataTransfer.files[0]); });

        async function uploadFile(file) {
            if (isUploading || !sessionToken) return;
            if (serverConfig && file.size > serverConfig.maxFileSize) {
                showStatus(`Max size is ${serverConfig.maxFileSizeMB}MB.`);
                return;
            }

            isUploading = true;
            toggleLoading(true, file.name, file.size);

            return new Promise((resolve, reject) => {
                const xhr = new XMLHttpRequest();
                xhr.upload.addEventListener('progress', (e) => {
                    if (e.lengthComputable) updateProgress((e.loaded / e.total) * 100, e.loaded, e.total);
                });

                xhr.onload = function () {
                    try {
                        if (xhr.status >= 200 && xhr.status < 300) {
                            const resData = JSON.parse(xhr.responseText);
                            // UPDATED: downloadUrl now respects the absolute BunnyCDN URL from worker
                            const downloadUrl = resData.url.startsWith('http') ? resData.url : `${WORKER_BASE_URL}${resData.url}`;

                            files.unshift({
                                id: resData.id,
                                name: file.name,
                                url: downloadUrl,
                                type: file.type || 'text/plain',
                                expires: resData.expires_at || "never",
                                created: Date.now()
                            });

                            saveFiles();
                            render();
                            showStatus("FILE UPLOADED. NSA NOTIFIED.", "success");
                            resolve(resData);
                        } else {
                            showStatus("Upload failed.");
                            reject();
                        }
                    } catch (e) { reject(e); } finally { isUploading = false; toggleLoading(false); }
                };
                xhr.onerror = () => { isUploading = false; toggleLoading(false); showStatus("Network error."); };
                xhr.open('POST', `${WORKER_BASE_URL}/api/create-file`);
                xhr.setRequestHeader('x-session-token', sessionToken);
                xhr.setRequestHeader('Content-Type', file.type || 'application/octet-stream');
                xhr.send(file);
            });
        }

        function render() {
            const grid = document.getElementById('file-grid');
            const empty = document.getElementById('empty-state');
            if (files.length === 0) { empty.classList.remove('hidden'); grid.innerHTML = ''; return; }
            empty.classList.add('hidden');
            grid.innerHTML = files.map(file => {
                const isImg = file.type.startsWith('image');
                return `
                <div class="bg-white border-[4px] border-black shadow-brutal p-5 flex flex-col gap-5">
                    <div class="relative aspect-video bg-black border-[3px] border-black overflow-hidden scanlines flex items-center justify-center">
                        <div class="absolute top-3 left-3 z-10 bg-accent border-[2px] border-black px-2 py-0.5 text-xs font-black uppercase text-black">
                            ${file.name.split('.').pop()}
                        </div>
                        ${isImg ? `<img class="w-full h-full object-cover" src="${file.url}" loading="lazy">` :
                        `<div class="text-accent text-center p-6 font-bold text-sm break-all uppercase tracking-tighter">${file.name}</div>`}
                    </div>
                    <div class="flex gap-3">
                        <button onclick="copyToClipboard('${file.url}', this)" class="active-press flex-grow bg-accent text-black border-[3px] border-black py-4 font-black text-sm shadow-brutal-sm uppercase">COPY LINK</button>
                        <button onclick="removeFile('${file.id}')" class="active-press bg-alert text-white border-[3px] border-black px-6 py-4 font-black shadow-brutal-sm">Ã—</button>
                    </div>
                    <div class="border-[3px] border-black h-6 bg-[#eee] relative overflow-hidden">
                        <div id="bar-${file.id}" class="h-full bg-black transition-all duration-1000" style="width: 100%"></div>
                        <div id="time-${file.id}" class="absolute inset-0 flex items-center justify-center text-xs font-black mix-blend-difference text-white uppercase">Calculating...</div>
                    </div>
                </div>`;
            }).join('');
            updateTimers();
        }

        function updateProgress(percent, loaded, total) {
            const bar = document.getElementById('upload-progress-bar');
            const text = document.getElementById('upload-progress-text');
            if (bar) bar.style.width = `${Math.round(percent)}%`;
            if (text) text.innerText = `${Math.round(percent)}%`;
        }

        function updateTimers() {
            const now = Date.now();
            files.forEach(f => {
                const bar = document.getElementById(`bar-${f.id}`);
                const text = document.getElementById(`time-${f.id}`);
                if (!bar || !text) return;
                if (f.expires === "never") { text.innerText = "IMMORTAL"; return; }
                const remaining = f.expires - now;
                if (remaining <= 0) { removeFile(f.id); return; }
                const pct = Math.max(0, (remaining / (f.expires - f.created)) * 100);
                const h = Math.floor(remaining / 3600000);
                const m = Math.floor((remaining % 3600000) / 60000);
                const s = Math.floor((remaining % 60000) / 1000);
                bar.style.width = `${pct}%`;
                text.innerText = `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
            });
        }

        function toggleLoading(busy, fileName = '', fileSize = 0) {
            const zone = document.getElementById('upload-default');
            const execBtn = document.getElementById('execute-btn');
            if (busy) {
                zone.innerHTML = `
                    <div class="font-black text-2xl uppercase border-[4px] border-black bg-accent px-6 py-3">STEALING WIFI...</div>
                    <div class="progress-container"><div id="upload-progress-bar" class="progress-bar"></div></div>
                    <div class="upload-info"><div id="upload-progress-text" class="font-black">0%</div></div>`;
                execBtn.innerText = "UPLOADING...";
                execBtn.disabled = true;
            } else {
                zone.innerHTML = `<div class="font-black text-2xl uppercase border-[4px] border-black bg-white px-6 py-3 shadow-brutal">FEED ME FILES</div>`;
                updateFileSizeDisplay();
                execBtn.innerText = "SHIP IT TO PROD";
                execBtn.disabled = false;
            }
        }

        function saveFiles() { localStorage.setItem(STORAGE_KEY, JSON.stringify(files)); }
        function removeFile(id) { files = files.filter(f => f.id !== id); saveFiles(); render(); }
        function triggerFileInput() { document.getElementById('file-input').click(); }
        function handleFileSelect(e) { if (e.target.files.length > 0) uploadFile(e.target.files[0]); }

        async function copyToClipboard(u, b) {
            await navigator.clipboard.writeText(u);
            const o = b.innerText; b.innerText = 'YOINKED!';
            setTimeout(() => { b.innerText = o; }, 1000);
        }

        async function uploadCode() {
            if (!window.editor) return;
            const code = window.editor.getValue().trim();
            if (!code) return;
            const ext = document.getElementById('code-ext').value;
            const name = document.getElementById('code-ext').options[document.getElementById('code-ext').selectedIndex].text;
            const blob = new Blob([code], { type: ext === 'html' ? 'text/html' : 'text/plain' });
            await uploadFile(new File([blob], name));
            window.editor.setValue("// PASTE YOUR CODE HERE...");
        }

        function setMode(m) {
            const isU = m === 'upload';
            document.getElementById('module-upload').classList.toggle('hidden', !isU);
            document.getElementById('module-code').classList.toggle('hidden', isU);
            if (!isU && window.editor) setTimeout(() => window.editor.refresh(), 50);
        }

        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>

</html>